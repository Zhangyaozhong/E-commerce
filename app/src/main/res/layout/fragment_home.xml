<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".fragment.HomeFragment">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginBottom_20"
        android:layout_marginTop="@dimen/marginTop_36"
        android:paddingLeft="@dimen/paddingLeft_24"
        android:paddingRight="@dimen/paddingLeft_24">

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="@dimen/marginRight_20"
            android:src="@drawable/common_nav_btn_menu" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/common_nav_btn_search" />
    </RelativeLayout>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/mXRecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"></com.jcodecraeer.xrecyclerview.XRecyclerView>


</LinearLayout>