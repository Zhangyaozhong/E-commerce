<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreenTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="PersonTv" parent="AppTheme">
        <item name="android:textSize">14sp</item>  <!--设置大小-->
        <item name="android:color">#666</item>   <!--设置颜色-->
    </style>

    <style name="TvStyle1" parent="AppTheme">
        <item name="android:textSize">12sp</item>  <!--设置大小-->
        <item name="android:color">#666</item>   <!--设置颜色-->
    </style>

    <style name="TvStyle2" parent="AppTheme">
        <item name="android:textSize">14sp</item>  <!--设置大小-->
        <item name="android:color">#ff0606</item>   <!--设置颜色-->
    </style>

    <style name="InformationTv" parent="AppTheme">
        <item name="android:textSize">16sp</item>  <!--设置大小-->
        <item name="android:color">#666</item>   <!--设置颜色-->
    </style>

    <style name="InformationTv2" parent="AppTheme">
        <item name="android:textSize">12sp</item>  <!--设置大小-->
        <item name="android:color">#999999</item>   <!--设置颜色-->
    </style>

    <style name="WalletTv" parent="AppTheme">
        <item name="android:textSize">18sp</item>  <!--设置大小-->
        <item name="android:color">#343434</item>   <!--设置颜色-->
    </style>

    <style name="WalletTv2" parent="AppTheme">
        <item name="android:textSize">64sp</item>  <!--设置大小-->
        <item name="android:color">#343434</item>   <!--设置颜色-->
    </style>
</resources>
